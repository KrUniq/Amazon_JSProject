<!-- FileInfo.ejs -->
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Информация из файла</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Навигационное меню -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Amazon Products</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/products">Список продуктов</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/products/create">Добавить новый продукт</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/system-info">Информация об ОС сервера</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/file-info">Информация из файла</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <h1 class="mt-4">Информация из файла</h1>
        
        <!-- Отображение содержимого файла -->
        <h3 class="mt-4">Содержимое файла:</h3>
        <pre><%= fileContent %></pre>
        <!-- Добавление изображения -->
        <img src="../data/image.jpg" class="img-fluid mt-3">
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
